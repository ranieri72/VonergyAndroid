<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.ProfileActivity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtFuncionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/Funcionário"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp" />


        <EditText
            android:id="@+id/edtNome"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFuncionario"
            android:layout_centerHorizontal="true"
            android:hint="Nome"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtRg"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtNome"
            android:layout_centerHorizontal="true"
            android:hint="Rg"
            android:inputType="number"
            android:textColor="#fff"
            android:textSize="20sp"
            android:maxLength="7"/>

        <EditText
            android:id="@+id/edtOrgao"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtRg"
            android:layout_centerHorizontal="true"
            android:hint="Orgão Expeditor"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtDataNasc"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtOrgao"
            android:layout_centerHorizontal="true"
            android:hint="Data de Nascimento"
            android:inputType="date"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtNomeMae"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtDataNasc"
            android:layout_centerHorizontal="true"
            android:hint="Nome da Mãe"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtNomePai"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtNomeMae"
            android:layout_centerHorizontal="true"
            android:hint="Nome do Pai"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="170dp"
            android:layout_height="62dp"

            android:layout_below="@+id/edtNome"
            android:layout_centerHorizontal="true">

            <RadioButton
                android:id="@+id/radioButtonM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M" />

            <RadioButton
                android:id="@+id/radioButtonF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/radioButtonM"
                android:layout_weight="1"
                android:text="F" />
        </RadioGroup>

        <EditText
            android:id="@+id/edtLogradouro"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtNomePai"
            android:layout_centerHorizontal="true"
            android:hint="@string/Logradouro"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtBairro"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtLogradouro"
            android:layout_centerHorizontal="true"
            android:hint="@string/Bairro"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtCidade"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtBairro"
            android:layout_centerHorizontal="true"
            android:hint="@string/Cidade"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/edtNumero"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtCidade"
            android:layout_centerHorizontal="true"
            android:hint="@string/Número"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtReferencia"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtNumero"
            android:layout_centerHorizontal="true"
            android:hint="@string/Referência"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtCep"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtReferencia"
            android:layout_centerHorizontal="true"
            android:hint="@string/Cep"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtUf"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtCep"
            android:layout_centerHorizontal="true"
            android:hint="@string/UF"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtComplemento"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtUf"
            android:layout_centerHorizontal="true"
            android:hint="@string/Complemento"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtComplemento"
            android:layout_centerHorizontal="true"
            android:hint="@string/Telefone"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtCelular"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtTelefone"
            android:layout_centerHorizontal="true"
            android:hint="@string/Celular"
            android:inputType="text"
            android:textColor="#fff"
            android:textSize="20sp" />



    </RelativeLayout>
</ScrollView>